alias k8 "kubectl --context nwtprod --namespace auth"
alias k8g "k8 get pod"
alias k8l "k8 logs"
alias k8lf "k8l -f"
alias k8e "k8 exec -it"
function k8G -a service
    k8g | awk -v service="$service-[0-9]+-.*" '$service ~ service { print $1 }' | head -1
end
function k8E -a service command
    k8e (k8G "$service") "$command"
end
function k8L -a service
    k8lf (k8G "$service")
end
alias k8h kubernetes_http_get
alias k8hg kubernetes_http_get